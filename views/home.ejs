    <link rel="stylesheet" href="/css/home.css">
    <head>
        <h1 id="heading"> <i class="far fa-address-card"></i>Contact-List</h1>
    </head>
    <body>
        <table>
            <tr>
                <th> Name</th>
                <th colspan="2"> Phone</th>
            </tr>
