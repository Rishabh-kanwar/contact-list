            <tr>
                <td> <%= i.name%>:</td> 
                <td colspan="2"> <%=i.phone%> </td>
                    <td id="delete-button"><a href="/delete-contact/?phone= <%=i.phone%>">   <i class="fas fa-times-circle"></i>  </a>  </td>
                <%}%>
            </tr>
            
            <tr id="input-correction">
                <form action="/create-contact" method="post">
                <td>   <input type="text" name="name" placeholder="Enter name" required></td>
                <td>   <input type="number" name="phone" placeholder="Enter phone NUMBER" required></td>
                <td >  <BUtton type="submit"> ADD CONTACT</BUtton></td>
                </form>
                <script type="text/javascript" src="/js/home.js"></script>
            </tr>
        </table>
    </body>
</html>
